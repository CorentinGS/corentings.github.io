---

import { Picture } from 'astro:assets'

const { name, content, company, image } = Astro.props
---

<div class="sm:inline-block sm:w-full sm:px-4 h-full">
	<figure class="rounded-2xl bg-zinc-50 dark:bg-zinc-800 p-8 text-sm/6 h-full ">
		<blockquote class="text-zinc-900 dark:text-zinc-100 ">
			<p>“{content}”</p>
		</blockquote>
		<figcaption class="mt-6 flex items-center gap-x-4">
			<Picture
				class="size-10 rounded-full bg-zinc-50 object-cover"
				src={image}
				alt=""/>
			<div>
				<div class="font-semibold text-zinc-900 dark:text-zinc-100">{name}</div>
				<div class="text-zinc-600 dark:text-zinc-400">{company}</div>
			</div>
		</figcaption>
	</figure>
</div>