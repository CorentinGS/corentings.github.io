---
import { Icon } from 'astro-iconify'
import Logo from '../Index/Logo.astro'
---

<header class=''>
	<nav class='mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8' aria-label='Global'>
		<div class='flex lg:flex-1'>
			<a
				href={'/'}
				class='hoveranimation -m-1.5 flex p-1.5 text-xl normal-case lg:text-3xl'
				data-astro-prefetch='hover'
			>
				<Logo class='mr-2 size-8' />
			</a>
		</div>
		<div class='flex lg:hidden'>
			<label for='my-modal-6' class='btn btn-ghost lg:hidden'>
				<svg
					class='inline-block size-6 stroke-current'
					fill='none'
					viewBox='0 0 24 24'
					xmlns='http://www.w3.org/2000/svg'
				>
					<path
						d='M4 6h16M4 12h16M4 18h16'
						stroke-linecap='round'
						stroke-linejoin='round'
						stroke-width='2'></path>
				</svg>
			</label>
		</div>
		<div class="hidden lg:flex lg:gap-x-12 font-['Rubik_Variable'] text-md lg:text-lg">
			<a href={'/projects'} class='text-md font-semibold leading-6' data-astro-prefetch='hover'
				>{'Projects'}</a
			>
			<a href={'/experiences'} class='text-md font-semibold leading-6' data-astro-prefetch='hover'
				>{'Experiences'}</a
			>
			<a href={'/blog'} class='text-md font-semibold leading-6' data-astro-prefetch='hover'
				>{'Articles'}</a
			>
		</div>
		<div class='hidden lg:flex lg:flex-1 lg:justify-end'>
			<a href='https://github.com/corentings'>
				<Icon name='lucide:github' class='hoveranimation size-6' />
			</a>
		</div>
	</nav>
	<!-- Main modal -->
	<!-- Mobile menu, show/hide based on menu open state. -->
</header>
