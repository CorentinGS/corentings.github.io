---
import '@fontsource/syne'
import '@fontsource/nunito'

import { AstroFont } from 'astro-font'
---

<AstroFont
	config={[
		{
			name: 'Lufga',
			src: [
				{
					style: 'normal',
					weight: '400',
					path: './public/fonts/Lufga-Regular.woff2'
				},
				{
					style: 'bold',
					weight: '700',
					path: './public/fonts/Lufga-Bold.woff2'
				}
			],
			preload: false,
			display: 'swap',
			selector: 'body',
			fallback: 'sans-serif'
		}
	]}
/>
