---
const themes = ["light", "dark", "dracula", "memnix", "luxury", "cyberpunk"]
---

<div class="dropdown dropdown-bottom px-0 mx-0">
    <label tabindex="0" class="btn w-[18rem] lg:w-[8rem] max-w-xs text-lg font-normal">
        Theme
        <svg width="12px" height="12px" class="h-2 w-2 fill-current opacity-60 inline-block ml-auto"
             xmlns="http://www.w3.org/2000/svg" viewBox="0 0 2048 2048">
            <path d="M1799 349l242 241-1017 1017L7 590l242-241 775 775 775-775z"></path>
        </svg>
    </label>
    <ul tabindex="0" class="dropdown-content z-[1] p-2 shadow-2xl bg-base-300 rounded-box w-52 ">
        {themes.map((theme) =>
                <li key={theme}><input type="radio" name="theme-dropdown"
                                       class="theme-controller btn btn-sm btn-block btn-ghost justify-start"
                                       aria-label={theme} value={theme}/></li>
        )}
    </ul>
</div>

<style></style>

<script>

    const createEvent = () => {
        // Get all radio inputs
        const radioInputs = document.querySelectorAll('input[name="theme-dropdown"]');

        // Add event listener to each radio input
        radioInputs.forEach(function (input) {
            input.addEventListener('change', function () {
                // Update the localStorage with the selected theme
                localStorage.setItem('theme', input.value);
            });
        });

        // Set the initially selected theme from localStorage
        const selectedTheme = localStorage.getItem('theme');
        if (selectedTheme) {
            const selectedInput = document.querySelector(`input[value="${selectedTheme}"]`);
            if (selectedInput) {
                selectedInput.checked = true;
            }
        }
    }

    document.addEventListener('astro:page-load', () => {
        // This only runs once.
        createEvent();
    }, );

    document.addEventListener('DOMContentLoaded', createEvent);
</script>