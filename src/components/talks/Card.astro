---
interface Props {
	title: string
	description: string
	href?: string
	date: string
	location: string
	cta?: string
}

const { title, description, href, date, location, cta } = Astro.props
---

<article class='group relative flex flex-col items-start'>
	<h3 class='text-base font-semibold tracking-tight'>
		<div
			class='absolute -inset-x-4 -inset-y-6 z-0 scale-95 bg-base-200 opacity-0 transition group-hover:scale-100 group-hover:opacity-100 sm:-inset-x-6 sm:rounded-2xl'
		>
		</div>
		<a href={href} target='_blank' rel='noreferrer noopener'
			><span class='absolute -inset-x-4 -inset-y-6 z-20 sm:-inset-x-6 sm:rounded-2xl'></span><h3
				class='relative z-10 font-bold'
				'
			>
				{title}
			</h3></a
		>
	</h3>
	<p
		class='relative z-10 order-first mb-3 flex items-center pl-3.5 text-sm text-base-content/60 font-bold text-opacity-60'
	>
		<span class='absolute inset-y-0 left-0 flex items-center' aria-hidden='true'
			><span class='h-4 w-0.5 rounded-full bg-base-content/60'></span></span
		>{location}{'ãƒ»'}
		{date}
	</p>
	<p class='relative z-10 mt-2 text-sm text-base-content/60'>{description}</p>
	<div
		aria-hidden='true'
		class='relative z-10 mt-4 flex items-center text-sm font-medium text-primary'
	>
		{
			cta != null ? (
				<>
					<span>{cta} </span>
					<svg
						viewBox='0 0 16 16'
						fill='none'
						aria-hidden='true'
						class='ml-1 size-4 stroke-current'
					>
						<path
							d='M6.75 5.75 9.25 8l-2.5 2.25'
							stroke-width='1.5'
							stroke-linecap='round'
							stroke-linejoin='round'
						/>
					</svg>
				</>
			) : null
		}
	</div>
</article>
