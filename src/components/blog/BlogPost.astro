---
import type { BlogPost } from "../../../utils/types";
import LucideArrowLeft from '~icons/lucide/arrow-left'
import { Picture,  Image } from '@astrojs/image/components';

interface Props {
  blogPost: BlogPost;
}

const { blogPost } = Astro.props;
---

<div class="relative w-full bg-base-100 p-5 min-h-screen">
  <div class="hoveranimation absolute left-1 top-[0.5rem]">
    <a href="/blog" class="btn btn-ghost text-xl md:text-2xl lg:text-3xl" rel="prefetch">
      <LucideArrowLeft />
    </a>
  </div>
  <div
    class="relative mx-auto mb-4 w-full max-w-screen-lg md:mb-0"
    class="blogPost.dark_background===true? 'text-white': ''"
    style="height: 24em"
  >
    <Picture
      src={blogPost.image}
      class="absolute left-0 top-0 z-0 h-full w-full object-cover"
      alt={blogPost.title}
      aspectRatio="16/9"
      loading={"eager"}
      formats={["avif", "webp", "png"]}
      widths={[512, 1024]}
      sizes="(max-width: 512px) 248px, 512px"
      aspectRatio={16/9}
      />
    <div class="absolute bottom-0 left-0 z-20 p-4">
      <span
        class="badge badge-secondary mb-2 inline-flex items-center justify-center px-4 py-1 uppercase"
        >{blogPost.category}</span
      >
      <h1 class="text-4xl leading-tight">
        {blogPost.title}
      </h1>
      <div class="mt-3 flex">
        <Image
          src={blogPost.author.avatar}
          format='webp'
          quality={50}
          loading={"eager"}
          alt={blogPost.author.name}
          width="64"
          height="64"
          aspectRatio="1/1"
          class="mr-2 h-10 w-10 rounded-full object-cover"/>
        <div>
          <p class="text-sm">
            {blogPost.author.name}
          </p>
          <p class="text-xs">
            {blogPost.date} ãƒ»{blogPost.timeToRead}
          </p>
        </div>
      </div>
    </div>
  </div>
  <div
    class="mx-auto mt-12 max-w-screen-lg px-4 text-lg leading-relaxed lg:px-0"
  >
    <slot />
  </div>
</div>

