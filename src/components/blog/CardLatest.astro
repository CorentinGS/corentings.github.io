---
import type { BlogPost } from '../../../utils/types';
import { Picture } from 'astro:assets';
interface Props {
	blogPost: BlogPost;
}

const { blogPost } = Astro.props;
---

<article
	class={(blogPost.dark_background === true ? 'text-white' : 'text-black') +
		' relative mx-auto mb-4 w-full max-w-7xl md:mb-0 scale-100 transform transition-all duration-300 hover:scale-95'}
	style="height: 24em"
>
	<Picture
		src={blogPost.image}
		class="absolute left-0 top-0 z-0 h-full w-full object-cover"
		alt={blogPost.title}
		loading={'eager'}
		decoding="async"
		formats={['avif', 'webp']}
		fit="cover"
		aspectRatio={16 / 9}
		width="512"
		height="512"
		quality={40}
	/>
	<div class="absolute bottom-0 left-0 z-20 p-4">
		<h1 class="text-4xl leading-tight">
			{blogPost.title}
		</h1>
		<div class="mt-3 flex">
			<Picture
				src={blogPost.author.avatar}
				formats={['avif', 'webp']}
				quality={30}
				loading={'eager'}
				alt={blogPost.author.name}
				width="48"
				height="48"
				aspectRatio="1/1"
				class="mr-2 h-10 w-10 rounded-full object-cover"
			/>
			<div>
				<div class="flex flex-col">
					<span>{blogPost.author.name}</span>
					<span><time datetime={blogPost.date}> {blogPost.date}</time>ãƒ»{blogPost.timeToRead}</span>
				</div>
			</div>
		</div>
	</div>
</article>
