---
import { ImageMetadata } from 'astro'
interface Props {
	title: string
	description: string
	image?: ImageMetadata
	name: string
	job?: string
}

import { Picture } from 'astro:assets'

const { title, description, image, name, job } = Astro.props

const picture = image
	? image
	: 'https://spotlight.tailwindui.com/_next/image?url=%2F_next%2Fstatic%2Fmedia%2Fportrait.79754e9e.jpg&w=640&q=75'
---

<div class='hoveranimation rounded-lg border border-base-content/70 p-8'>
	<p class='leading-loose'>
		“{description}”
	</p>

	<div class='-mx-2 mt-8 flex items-center'>
		<Picture
			class='mx-2 size-14 shrink-0 rounded-full object-cover ring-4 ring-base-content/20'
			width='56'
			height='56'
			quality='60'
			loading='lazy'
			decoding='async'
			formats={['avif', 'webp']}
			src={picture}
			alt={name}
		/>

		<div class='mx-2'>
			<h1 class='font-semibold'>{name}</h1>
			<span class='text-sm text-base-content/70'>{title}</span><span
				class={job ? 'text-sm text-base-content/70' : 'hidden text-sm text-base-content/70'}
				>, {job}</span
			>
		</div>
	</div>
</div>
