---
import Timeline from "./Index/Timeline.astro";
import TimelineCard from "./Index/TimelineCard.astro";
import { Experiences } from "../../utils/config";

const ExperiencesList = Experiences;
---

<section class="container mx-auto w-full bg-base-100 lg:py-15 py-6 md:py-10">
    <div class="items-center lg:flex">
        <h2 class="mx-auto text-2xl font-bold md:text-3xl lg:text-5xl">
            My Experiences
        </h2>
    </div>
    <div class="wrap relative h-full overflow-hidden p-10">
        <div
            class="border-2-2 absolute left-[3.5rem] h-full border border-dashed border-gray-700 border-opacity-20 md:left-[50%]"
        >
        </div>
        <div>
            {
                ExperiencesList.experiences.map((card, index) => (
                    <Timeline right={index % 2 !== 0}>
                        <TimelineCard
                            description={card.description}
                            end_date={card.end_date}
                            image={card.image}
                            link={card.link}
                            location={card.location}
                            name={card.name}
                            start_date={card.start_date}
                            type={card.type}
                            tools={card.tools}
                            right={index % 2 !== 0}
                        />
                    </Timeline>
                ))
            }
        </div>
    </div>
</section>
