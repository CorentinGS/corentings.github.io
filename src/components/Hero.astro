---
import { Config, Profile } from 'src/utils/config'
import { Icon } from 'astro-iconify'

import { Picture } from 'astro:assets'

const social = Config
const profile = Profile
---

<section class='hero relative min-h-screen bg-base-100'>
	<div class='hero-content'>
		<div class='flex flex-col'>
			<div
				class='my-10 flex flex-col items-center justify-center text-center sm:flex-row sm:justify-start sm:text-left'
			>
				<Picture
					src={Profile.avatar}
					quality={'high'}
					formats={['avif', 'webp']}
					alt='avatar'
					class='mask mask-squircle mb-4 size-48 flex-shrink-0 object-cover object-center sm:mb-0'
					width={192}
					height={192}
					loading={'eager'}
				/>
				<div class='flex-grow sm:pl-8'>
					<span class='text-xl font-bold uppercase text-primary'>{profile.full_name}</span>
					<h1 class='text-2xl font-bold md:text-3xl lg:text-5xl'>Freelance backend developer</h1>
					<h2 class='max-w-3xl py-2 text-xl text-accent md:text-2xl lg:text-3xl'>
						I <span class='underline underline-offset-4'>code</span>
						{', '}
						I <span class='underline underline-offset-4'>write</span>
						{', '}
						I <span class='underline underline-offset-4'>contribute</span>
						{', '}
						I <span class='underline underline-offset-4'>materialize dream</span>
					</h2>
					<h3 class='max-w-3xl py-2 text-xl md:text-2xl lg:text-3xl'></h3>

					<div class='inline-flex space-x-4'>
						<span class='text-md uppercase lg:text-lg'>Let's connect</span>
						<Icon name='lucide:chevron-right' class='mx-auto' />
						<a
							href={'https://twitter.com/' + social.twitter}
							target='_blank'
							rel='noopener noreferrer'
							aria-label='twitter'
							class='my-auto'
							data-umami-event='Twitter hero link clicked'
						>
							<Icon name='ri:twitter-x-fill' class='hoveranimation size-6' />
						</a>
						<a
							href={social.discord}
							rel='noopener noreferrer'
							target='_blank'
							aria-label='discord'
							data-umami-event='Discord hero link clicked'
							class='my-auto'
						>
							<Icon name='la:discord' class='hoveranimation size-6' />
						</a>
						<a
							href={'https://github.com/' + social.github}
							target='_blank'
							aria-label='github'
							rel='noopener noreferrer'
							data-umami-event='Github hero link clicked'
							class='my-auto'
						>
							<Icon name='lucide:github' class='hoveranimation size-6' />
						</a>
						<a
							href={'https://www.linkedin.com/in/' + social.linkedin}
							target='_blank'
							aria-label='linkedin'
							rel='noopener noreferrer'
							data-umami-event='Linkedin hero link clicked'
							class='my-auto'
						>
							<Icon name='lucide:linkedin' class='hoveranimation size-6' />
						</a>
						<a
							rel='noopener noreferrer'
							href={social.mastodon}
							aria-label='mastodon'
							target='_blank'
							data-umami-event='Mastodon hero link clicked'
							class='my-auto'
						>
							<Icon name='la:mastodon' class='hoveranimation size-6' />
						</a>
					</div>
				</div>
			</div>
			<a href='#about' class='mx-auto my-10 size-12'>
				<Icon name='lucide:chevron-down' class='animate-bounce' aria-label='scrolling down' />
			</a>
		</div>
	</div>
</section>
