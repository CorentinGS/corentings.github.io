---
import { Picture } from 'astro:assets'

let title = 'Backend developer, chess player, and writer.'
let subtitle =
	"I'm Corentin, a backend developer based in France. I specialize in building robust backend systems and APIs in Golang. I'm also a chess player and writer."
let name = 'CORENTIN GIAUFER SAUBERT'

import corentinImg from '../assets/avatar.webp'
---

<div
	class='relative isolate overflow-hidden bg-white dark:bg-zinc-900'
	aria-labelledby='main-heading'
>
	<div class='mx-auto max-w-7xl px-6 pb-24 pt-10 sm:pb-32 lg:flex lg:px-8 lg:py-40'>
		<div class='mx-auto max-w-2xl lg:mx-0 lg:flex-shrink-0 lg:pt-8'>
			<h2 id='name-heading' class='sr-only'>{name}</h2>

			<h1
				id='main-heading'
				class='mt-10 text-pretty text-5xl font-semibold tracking-tight text-zinc-900 dark:text-zinc-100 sm:text-7xl'
			>
				{title}
			</h1>

			<p class='mt-8 text-pretty text-lg font-medium text-zinc-600 dark:text-zinc-400 sm:text-xl/8'>
				{subtitle}
			</p>

			<nav class='mt-10' aria-label='Social media links'>
				<ul class='flex gap-6' role='list'>
					<li>
						<a
							href='https://twitter.com/GSCorentinDev'
							target='_blank'
							rel='noopener noreferrer'
							class='group -m-1 p-1 focus:outline-none focus:ring-2 focus:ring-orange-500 rounded-full'
							aria-label='Follow on X (formerly Twitter)'
						>
							<svg
								viewBox='0 0 24 24'
								aria-hidden='true'
								class='h-6 w-6 fill-zinc-500 transition group-hover:fill-zinc-600 dark:fill-zinc-400 dark:group-hover:fill-zinc-300'
							>
								<path
									d='M13.3174 10.7749L19.1457 4H17.7646L12.7039 9.88256L8.66193 4H4L10.1122 12.8955L4 20H5.38119L10.7254 13.7878L14.994 20H19.656L13.3171 10.7749H13.3174ZM11.4257 12.9738L10.8064 12.0881L5.87886 5.03974H8.00029L11.9769 10.728L12.5962 11.6137L17.7652 19.0075H15.6438L11.4257 12.9742V12.9738Z'
								></path>
							</svg>
						</a>
					</li>
					<li>
						<a
							href='https://github.com/corentings'
							target='_blank'
							rel='noopener noreferrer'
							class='group -m-1 p-1'
							aria-label='Follow on GitHub'
						>
							<svg
								viewBox='0 0 24 24'
								class='h-6 w-6 fill-zinc-500 transition group-hover:fill-zinc-600 dark:fill-zinc-400 dark:group-hover:fill-zinc-300'
							>
								<path
									fill-rule='evenodd'
									clip-rule='evenodd'
									d='M12 2C6.475 2 2 6.588 2 12.253c0 4.537 2.862 8.369 6.838 9.727.5.09.687-.218.687-.487 0-.243-.013-1.05-.013-1.91C7 20.059 6.35 18.957 6.15 18.38c-.113-.295-.6-1.205-1.025-1.448-.35-.192-.85-.667-.013-.68.788-.012 1.35.744 1.538 1.051.9 1.551 2.338 1.116 2.912.846.088-.666.35-1.115.638-1.371-2.225-.256-4.55-1.14-4.55-5.062 0-1.115.387-2.038 1.025-2.756-.1-.256-.45-1.307.1-2.717 0 0 .837-.269 2.75 1.051.8-.23 1.65-.346 2.5-.346.85 0 1.7.115 2.5.346 1.912-1.333 2.75-1.05 2.75-1.05.55 1.409.2 2.46.1 2.716.637.718 1.025 1.628 1.025 2.756 0 3.934-2.337 4.806-4.562 5.062.362.32.675.936.675 1.897 0 1.371-.013 2.473-.013 2.82 0 .268.188.589.688.486a10.039 10.039 0 0 0 4.932-3.74A10.447 10.447 0 0 0 22 12.253C22 6.588 17.525 2 12 2z'
								></path>
							</svg>
						</a>
					</li>
					<li>
						<a
							href='https://www.linkedin.com/in/corentin-giaufer-saubert/'
							target='_blank'
							rel='noopener noreferrer'
							class='group -m-1 p-1'
							aria-label='Follow on LinkedIn'
						>
							<svg
								viewBox='0 0 24 24'
								class='h-6 w-6 fill-zinc-500 transition group-hover:fill-zinc-600 dark:fill-zinc-400 dark:group-hover:fill-zinc-300'
							>
								<path
									d='M18.335 18.339H15.67v-4.177c0-.996-.02-2.278-1.39-2.278-1.389 0-1.601 1.084-1.601 2.205v4.25h-2.666V9.75h2.56v1.17h.035c.358-.674 1.228-1.387 2.528-1.387 2.7 0 3.2 1.778 3.2 4.091v4.715zM7.003 8.575a1.546 1.546 0 01-1.548-1.549 1.548 1.548 0 111.547 1.549zm1.336 9.764H5.666V9.75H8.34v8.589zM19.67 3H4.329C3.593 3 3 3.58 3 4.297v15.406C3 20.42 3.594 21 4.328 21h15.338C20.4 21 21 20.42 21 19.703V4.297C21 3.58 20.4 3 19.666 3h.003z'
								></path>
							</svg>
						</a>
					</li>
				</ul>
			</nav>
		</div>

		<div
			class='mx-auto mt-16 max-w-2xl sm:mt-24 lg:ml-10 lg:mr-0 lg:mt-0 lg:max-w-none xl:ml-32 hidden lg:flex'
		>
			<div class='max-w-3xl flex-none sm:max-w-5xl lg:max-w-none'>
				<Picture
					src={corentinImg}
					alt='Profile of Corentin Giaufer Saubert'
					width={600}
					height={600}
					loading='eager'
					formats={['avif', 'webp']}
					class='rounded-full object-cover shadow-2xl ring-1 ring-gray-900/10 dark:ring-zinc-700 h-96 w-96'
				/>
			</div>
		</div>
	</div>
</div>
