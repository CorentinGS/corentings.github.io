---
import imgMemnix from '../assets/moutmout.png'
import imgTFD from '../assets/logo_tfd.png'
import Work from './Work.astro'
import { t } from 'i18next'
import imgMfStouuf from '../assets/MF_STOUUF.png'
import imgOneToo from '../assets/onetoo.jpg'
import { Trans } from 'astro-i18next/components'
---

<section class='bg-base-200'>
	<div class='lg:py-15 mx-auto w-full max-w-7xl py-6 md:py-10 lg:px-8'>
		<div class='relative px-4 sm:px-8 lg:px-12'>
			<div class='relative flex flex-col'>
				<div class='mx-auto grid max-w-xl grid-cols-1 gap-y-20 lg:max-w-none lg:grid-cols-2'>
					<div class='lg:order-first lg:row-span-2'>
						<h1 class='text-4xl font-bold tracking-tight sm:text-5xl'>{t('work.title')}</h1>
						<div class='mt-6 space-y-7 text-base'>
							<p>{t('work.content_a')}{' '}{t('work.content_b')}</p>
							<p>{t('work.content_c')} {' '} {t('work.content_d')} {' '} {t('work.content_e')}</p>
							<p>
								{t('work.content_f')}
								{' '}
								<Trans i18nKey='work.content_g'>
									<a
										href='https://projectbluefin.io/'
										rel='noreferrer noopener'
										class='underline underline-offset-4'>Bluefin</a
									>
								</Trans>
							</p>
						</div>
					</div>
					<div class='space-y-10 lg:pl-16 xl:pl-24'>
						<div class='rounded-2xl border border-base-content/30 p-6'>
							<h2 class='flex text-sm font-semibold'>
								<svg
									viewBox='0 0 24 24'
									fill='none'
									stroke-width='1.5'
									stroke-linecap='round'
									stroke-linejoin='round'
									aria-hidden='true'
									class='size-6 flex-none'
								>
									<path
										d='M2.75 9.75a3 3 0 0 1 3-3h12.5a3 3 0 0 1 3 3v8.5a3 3 0 0 1-3 3H5.75a3 3 0 0 1-3-3v-8.5Z'
										class='fill-base-content/10 stroke-base-content/60'></path>
									<path
										d='M3 14.25h6.249c.484 0 .952-.002 1.316.319l.777.682a.996.996 0 0 0 1.316 0l.777-.682c.364-.32.832-.319 1.316-.319H21M8.75 6.5V4.75a2 2 0 0 1 2-2h2.5a2 2 0 0 1 2 2V6.5'
										class='stroke-base-content/60'></path>
								</svg>
								<span class='ml-3'>{t('work.work')}</span>
							</h2>
							<ol class='mt-6 space-y-4'>
								<Work
									company='Memnix'
									role={t('work.role_founder')}
									startDate='2021'
									endDate={t('work.until_present')}
									image={imgMemnix}
								/>
								<Work
									company='Stouuf'
									role={t('work.role_cm')}
									startDate='2022'
									endDate={t('work.until_present')}
									image={imgMfStouuf}
								/>
								<Work
									company='TrustMe'
									role={t('work.role_lead')}
									startDate='Nov. 2022'
									endDate='Nov. 2023'
									image={imgTFD}
								/>
								<Work
									company='OneToo'
									role={t('work.role_trainee')}
									startDate='Jun. 2021'
									endDate='Jul. 2021'
									image={imgOneToo}
								/>
							</ol>
							<a
								class='ring-offset-base-50 group btn btn-ghost btn-md mt-6 inline-flex w-full items-center justify-center gap-2 rounded-md
                            px-3 py-2 text-sm font-medium
                             outline-offset-2 ring-1 ring-base-content ring-opacity-30 transition active:transition-none'
								rel='noreferrer noopener'
								href='https://www.linkedin.com/in/corentin-giaufer-saubert/'
								>{t('work.download_cv')}
								<svg
									viewBox='0 0 16 16'
									fill='none'
									aria-hidden='true'
									class='size-4 stroke-base-content transition'
								>
									<path
										d='M4.75 8.75 8 12.25m0 0 3.25-3.5M8 12.25v-8.5'
										stroke-width='1.5'
										stroke-linecap='round'
										stroke-linejoin='round'></path>
								</svg>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
